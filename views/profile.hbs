{{!< layout}}
<h1>Профиль</h1>
<p>Добро пожаловать, {{user.login}}</p>
<form action="/update" method="POST">
  <div class="form-group">
    <input class="form-control" type="text" name="login" value="{{user.login}}" required>
  </div>
  <div class="form-group">
    <input class="form-control" type="email" name="email" value="{{user.email}}" required>
  </div>
  <div class="form-group">
    <input class="form-control" type="password" name="password" placeholder="New Password">
  </div>
  <button class="btn btn-primary" type="submit">Обновить</button>
</form>
<form action="/delete" method="POST" class="mt-2">
  <button class="btn btn-danger" type="submit">Удалить</button>
</form>
<a class="btn btn-secondary mt-2" href="/">Вернуться на главную</a>
