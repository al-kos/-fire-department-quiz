{{!< layout}}
<h1>Викторина</h1>
<p>{{question}}</p>
<form action="/quiz" method="POST">
  {{#each options}}
    <div class="form-check">
      <input class="form-check-input" type="radio" id="{{this}}" name="answer" value="{{this}}" required>
      <label class="form-check-label" for="{{this}}">{{this}}</label>
    </div>
  {{/each}}
  <button class="btn btn-primary mt-3" type="submit">Далее</button>
</form>
